        <item name="android:background">#B0E0E6</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="newTheme" parent="Theme.AppCompat.DayNight.DarkActionBar"> <!--parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#B0E0E6</item>
